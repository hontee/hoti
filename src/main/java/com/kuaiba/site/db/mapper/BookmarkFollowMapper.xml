<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kuaiba.site.db.dao.BookmarkFollowMapper" >
  
  <delete id="unfollow" parameterType="map" >
    delete from t_bookmark_follow
    where uid = #{uid,jdbcType=BIGINT}
      and fid = #{fid,jdbcType=BIGINT}
  </delete>
  
  <insert id="follow" parameterType="map" >
    insert into t_bookmark_follow (uid, fid)
    values (#{uid,jdbcType=BIGINT}, #{fid,jdbcType=BIGINT})
  </insert>
  
  <select id="selectByUserId" parameterType="java.lang.Long" resultType="Long">
  SELECT fid FROM t_bookmark_follow WHERE uid = #{uid} ORDER BY fid
  </select>
  
</mapper>