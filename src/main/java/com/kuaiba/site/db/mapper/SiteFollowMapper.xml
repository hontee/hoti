<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kuaiba.site.db.dao.SiteFollowMapper" >
  <resultMap id="BaseResultMap" type="com.kuaiba.site.db.entity.SiteFollow" >
    <id column="uid" property="uid" jdbcType="BIGINT" />
    <id column="fid" property="fid" jdbcType="BIGINT" />
    <result column="created" property="created" jdbcType="TIMESTAMP" />
  </resultMap>
  
  <delete id="deleteByPrimaryKey" parameterType="map" >
    delete from site_follow
    where uid = #{uid,jdbcType=BIGINT}
      and fid = #{fid,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="map" >
    insert into site_follow (uid, fid)
    values (#{uid,jdbcType=BIGINT}, #{fid,jdbcType=BIGINT})
  </insert>
  <select id="selectByUid" parameterType="java.lang.Long" resultType="Long">
  SELECT fid FROM site_follow WHERE uid = #{uid} ORDER BY fid
  </select>
  
</mapper>